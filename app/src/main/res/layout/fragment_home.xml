<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg2"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- ON/OFF Kelistrikan -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardKelistrikan"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="8dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:backgroundTint="@color/card_off">

            <ImageView
                android:id="@+id/iconKelistrikan"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_power"
                app:tint="@color/icon_off"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvKelistrikanTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelistrikan"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvKelistrikanStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OFF"
            android:textColor="@color/red"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- Row Starter & Buzzer -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Starter -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardStarter"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:backgroundTint="@color/card_off">

                <ImageView
                    android:id="@+id/iconStarter"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_starter"
                    android:tint="@color/icon_off"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvStarterTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starter"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvStarterStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ON"
                android:textColor="@color/green"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Buzzer -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardBuzzer"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:backgroundTint="@color/card_off">

                <ImageView
                    android:id="@+id/iconBuzzer"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_buzzer_off"
                    app:tint="@color/icon_off" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvBuzzerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buzzer"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvBuzzerStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OFF"
                android:textColor="@color/red"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Status Sensor -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSensor"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/card_off">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iconSensor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_shield"
                android:tint="@color/icon_off"/>

            <TextView
                android:id="@+id/tvSensorStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diam"
                android:textColor="@color/red"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
